@model ProjetMVC.Models.Produit

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetMVC</title>
    <link rel="stylesheet" href="~/css/create.css" />
</head>
<body>
    <div class="wrap-container">
    <div class="form-container">
        <h1>Créer un produit</h1>
        <form asp-action="Create">
            <!-- Affiche les erreurs de validation -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Champ Nom du Produit -->
            <div class="form-group">
                <label asp-for="Nom"></label>
                <input asp-for="Nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <!-- Champ Prix du Produit -->
            <div class="form-group">
                <label asp-for="Prix"></label>
                <input asp-for="Prix" type="number" step="0.01" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>

            <!-- Bouton Créer -->
            <button type="submit" class="btn-submit">Créer</button>
        </form>

        <!-- Lien Retour -->
        <a asp-action="Index" class="back-link">Retour à la liste</a>
    </div>
    </div>
</body>
</html>
