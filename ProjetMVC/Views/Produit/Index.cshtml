@model IEnumerable<ProjetMVC.Models.Produit>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetMVC</title>
    <link rel="stylesheet" href="~/css/produit.css" />
</head>
<body>
    <div class="container">
        <div class="actions">
            <h1>Liste des produits</h1>
            <a asp-action="Create" class="btn-create">Créer un nouveau produit</a>
        </div>
        <div class="cards-container">
            @foreach (var produit in Model)
            {
                <div class="card">
                    <div class="image-container">
                        <!-- Image du produit -->
                    </div>
                    <h3>@produit.Nom</h3>
                    <p class="price">@produit.Prix €</p>
                    <div class="card-actions">
                        <a asp-action="Edit" asp-route-id="@produit.Id" class="btn-edit">Modifier</a>
                        <a asp-action="Delete" asp-route-id="@produit.Id" class="btn-delete">Supprimer</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
